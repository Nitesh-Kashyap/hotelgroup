<table>
  <% @hotels.each do |hotel| %>
    <tr>
      <td><%= link_to hotel.name, hotel_path(hotel) %></td>
      <td><%= button_to 'Edit', edit_hotel_path(hotel), method: 'get'%></td>
      <td><%= button_to 'Remove', hotel_path(hotel), method: 'delete', data: { confirm: 'Are you sure?' } %></td>
  <% end %>
</table>
<%= link_to "Add a New Hotel", new_hotel_path %>